<li class="films-list__item">
    <a class="films-list__link link" href="#">
        <div class="films-list__img-box">
            <img class="film-list__image" src="{{imgSrc}}" alt="{{title}} poster" />
        </div>
        <div class="films-list__content">
            <h4 class="films-list__title">{{title}}</h4>
            <p class="films-list__genre">{{genre}}| {{releaseDate}}</p>
            <span class="films-list__rating">{{rating}}</span>
        </div>
    </a>
</li>